<div class="modal fade" id="ModalEditAvatar" tabindex="-1" aria-labelledby="exampleModalCenterTitle" style="display: none;"
  aria-hidden="true">
  <div class="modal-dialog modal-dialog-centered">
    <div class="modal-content">
      <div class="modal-header">
        <h5 class="modal-title h4" id="myLargeModalLabel">
          <%= t "users.profile" %>
        </h5>
        <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
      </div>
      <div class="modal-body">
        <%= form_for current_user, url: user_path(current_user), remote: true do |f| %>
          <%= render "shares/error_messages", object: f.object%>
          <div class="form-group">
            <%= f.label t("users.avatar"), class:"form-label" %>
            <%= f.file_field :image, class: "form-control", id:"image_user" %>
          </div>
          <div class="form-group">
            <%= f.label t("users.name"), class:"form-label" %>
            <%= f.text_field :name, class: "form-control" %>
          </div>
          <div class="form-group">
            <%= f.label t("users.phone_number"), class:"form-label" %>
            <%= f.text_field :phone_number, class: "form-control" %>
          </div>
          <div class="modal-footer">
            <button type="submit" class="btn  btn-primary">
              <%= t "save_changes" %>
            </button>
            <button type="button" class="btn  btn-secondary" data-bs-dismiss="modal">
              <%= t "close" %>
            </button>
          </div>
        <% end %>
      </div>
    </div>
  </div>
</div>
