<div id="exampleModalCenter" class="modal fade" tabindex="-1" aria-labelledby="exampleModalCenterTitle"
  style="display: none;" aria-hidden="true">
  <div class="modal-dialog modal-dialog-centered" role="document">
    <div class="modal-content">
      <div class="modal-header">
        <h5 class="modal-title" id="exampleModalCenterTitle"><%= t "comments.comment" %></h5>
        <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
      </div>
      <div class="modal-body">
        <div class="form-group">
          <%= form_for @com,url: comments_path, remote: true do |f| %>
            <%= f.text_field :content, class:"form-control w-60" %>
            <%= f.hidden_field :book_id, class:"form-control w-60", value: @book.id %>
            <%= f.hidden_field :user_id, class:"form-control w-60", value: current_user.id %>
            <%= f.hidden_field :parent_id, class:"form-control w-60 add-parent", id: "add-parent" %>
            <button type="submit" class="btn btn-primary btn-answer">
              <%= t "comments.comment" %>
            </button>
          <% end %>
        </div>
      </div>
      <div class="modal-footer">

      </div>
    </div>
  </div>
</div>
