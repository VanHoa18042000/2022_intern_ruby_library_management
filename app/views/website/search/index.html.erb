<% provide :title, t("home.search") %>

<div class="row">
  <div class="col-sm-12">
    <div class="card">
      <div class="card-header">
        <div class="row">
          <div class="col-sm-12">
            <h4 class="text-center text-danger">
              <%= t "search_c" %>
            </h4>
            <hr>
          </div>
        </div>
        <%= form_with url: search_products_path, method: :get, local: false do |f| %>
          <div class="row">
            <div class="col-12 col-sm-12 col-md- col-lg- col-xl- col-xxl-4">
              <%= f.text_field :book_name, id: :book_name, placeholder: t("enter_book_name"), class:"form-control" %>
            </div>
            <div class="col-12 col-sm-12 col-md- col-lg- col-xl- col-xxl-3">
              <%= f.select :category, options_for_select(Category.pluck(:name, :id)), {include_blank: t("choose_category")},
                {:class => "form-select"} %>
            </div>
            <div class="col-12 col-sm-12 col-md- col-lg- col-xl- col-xxl-3">
              <%= f.select :author, options_for_select(Author.pluck(:name, :id)), {include_blank: t("choose_author")},
                {:class => "form-select"} %>
            </div>
            <div class="col-12 col-sm-12 col-md- col-lg- col-xl- col-xxl-2">
              <button type="submit" class="btn btn-danger w-100">
                <i class="fas fa-search"></i>
                <span> <%= t "search" %></span>
              </button>
            </div>
          </div>
        <% end %>
      </div>
    </div>
  </div>
<div class="row">
  <div class="col-sm-12">
    <h4 class="text-center title-search-result"></h4>
    <hr>
  </div>
</div>
<div class="row">
  <div class="result-search">
    <%= render @books %>
  </div>
  <div class="pagySearchBook">
    <%== pagy_nav @pagy %>
  </div>
</div>
