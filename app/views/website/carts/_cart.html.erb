<tr>
  <td>
    <%= order.date_start.strftime("%d-%m-%Y") %>
  </td>
  <td>
    <%= order.date_return.strftime("%d-%m-%Y") %>
  </td>
  <td>
    <%= order.created_at.strftime("%H:%M:%S | %d-%m-%Y") %>
  </td>
  <td>
    <% if order.pending? %>
      <span class="badge bg-warning w-83"><%= t "order.pending" %></span>
    <% elsif order.approved? %>
      <span class="badge bg-success w-83"><%= t "order.approved" %></span>
    <% elsif order.returned? %>
      <span class="badge bg-primary w-83"><%= t "order.returned" %></span>
    <% else %>
      <span class="badge bg-danger w-83"><%= t "order.canceled" %></span>
    <% end%>
    <div class="overlay-edit">
      <%= link_to cart_path(order), {class:"w-35 btn-icon btn-warning show-order", data: {url:cart_path(order)}, remote: true } do %>
        <i class="fas fa-eye"></i>
      <% end %>
      <%= link_to cart_path(order), class:"w-35 btn-icon btn-danger", method: "DELETE" do %>
        <i class="fas fa-calendar-times"></i>
      <% end %>
    </div>
  </td>
</tr>
