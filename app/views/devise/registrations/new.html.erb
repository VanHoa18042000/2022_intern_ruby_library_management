<% provide :title, t("log_in") %>

<div class="limiter">
  <div class="container-login100 background-login">
    <div class="wrap-login100">
      <%= form_for :user, as: resource_name, url: user_registration_path, :html => {class:"login100-form validate-form"} do |f| %>
        <%= devise_error_messages! %>
        <span class="login100-form-logo">
          <%= image_tag "user/avatar.png", alt: "user", class: "img-books" %>
        </span>
        <span class="login100-form-title p-b-34 p-t-27">
          <%= t"sign_up" %>
        </span>
        <div class="wrap-input100 validate-input" data-validate="Enter username">
          <%= f.text_field :name, class: "input100", placeholder:"User name" %>
          <span class="focus-input100" data-placeholder="&#xf207;"></span>
        </div>
        <div class="wrap-input100 validate-input" data-validate="Enter username">
          <%= f.email_field :email, class: "input100", placeholder:"Your email" %>
          <span class="focus-input100" data-placeholder="&#xf207;"></span>
        </div>
        <div class="wrap-input100 validate-input" data-validate="Enter password">
          <%= f.password_field :password, class: "input100", placeholder:"Password" %>
          <span class="focus-input100" data-placeholder="&#xf191;"></span>
        </div>
        <div class="wrap-input100 validate-input" data-validate="Enter password">
          <%= f.password_field :password_confirmation, class: "input100", placeholder:"Password confirmation" %>
          <span class="focus-input100" data-placeholder="&#xf191;"></span>
        </div>
        <div class="container-login100-form-btn">
          <button class="login100-form-btn">
            <%= t"sign_up" %>
          </button>
        </div>
        <div class="text-center p-t-90">
          <%= link_to t("forgot_password"), "#", class:"txt1" %>
        </div>
      <% end %>
    </div>
  </div>
</div>
<div id="dropDownSelect1"></div>
