if(<%= @pagy.count %> == 0){
  Swal.fire({
    title: '<strong>' + "<%= j t("no_result") %>" + '</strong>',
    html: "<%= j t("cannot_find_author") %>",
    icon: 'warning',
    showCancelButton: false,
    reverseButtons: false,
    showConfirmButton: false
  })
}else{
  $(".search-order").remove();
  $(".search-order-p").prepend("<span class='spinner-border spinner-border-sm spinner-border-sm-order' role='status'></span>")
  $("#contentTableOrder").html("<div class='loading'><span class='spinner-border text-center spinner-border-sm spinner-border-sm-order' role='status'></span><div>")
  $("#pagyOrder").html("")
  setTimeout(render_author, 400);
}
function render_author() {
  $("#contentTableOrder").html("<%= j render @orders %>")
  $("#pagyOrder").html("<%== j pagy_nav @pagy %>")
  $(".spinner-border-sm-order").remove();
  $(".search-order-p").prepend("<i class='fas fa-search search-order'></i>")
}
